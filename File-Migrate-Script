S3_URI=s3://maddy-project-sql-files/V1__shopwise.sql
RDS_ENDPOINT=dynamic-rds-db.cfoosuaxe9vm.ap-south-east-2.rds.amazonaws.com
RDS_DB_NAME=applicationdb
RDS_DB_USERNAME=maddy
RDS_DB_PASSWORD=titan123

# Update all packages
sudo yum update -y

# Download and extract Flyway
$ wget -qO- https://download.red-gate.com/maven/release/com/redgate/flyway/flyway-commandline/11.1.0/flyway-commandline-11.1.0-linux-x64.tar.gz | tar -xvz && sudo ln -s `pwd`/flyway-11.1.0/flyway /usr/local/bin 


# Create the SQL directory for migrations
sudo mkdir sql

# Download the migration SQL script from AWS S3
sudo aws s3 cp "$S3_URI" sql/

# Run Flyway migration
sudo flyway -url=jdbc:mysql://"$RDS_ENDPOINT":3306/"$RDS_DB_NAME"?allowPublicKeyRetrieval=true \
  -user="$RDS_DB_USERNAME" \
  -password="$RDS_DB_PASSWORD" \
  -locations=filesystem:sql \
  migrate
